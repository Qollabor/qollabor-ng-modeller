<humantask>
    <cafienne:implementation
        xmlns:cafienne="org.cafienne" class="org.cafienne.cmmn.definition.task.WorkflowTaskDefinition">
        <input name="Response" id="Response"/>
        <input name="DueDate" id="DueDate"/>
        <input id="_VOzX_Assignee" name="Assignee"/>
        <task-model>
			{
				"schema": {
					"title": "Read response",
					"type": "object",
					"properties": {
						"Response": {
							"title": "Your response",
							"type": "object",
							"properties": {
								"Message": {
									"type": "string",
									"title": "Your response message"
								},
								"Date": {
									"type": "string",
									"format": "date",
									"title": "Pick a date"
								},
								"Time": {
									"type": "string",
									"format": "time",
									"title": "Pick a time"
								},
								"SomeBoolean": {
									"type": "boolean",
									"title": "Check this"
								}
							}
						}
					}
				},
				"uiSchema": {
					"Message": {
						"ui:widget": "textarea"
					}
				}
			}
		</task-model>
    </cafienne:implementation>
</humantask>